<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout id="@+id/root"
    layout_width="match_parent"
    layout_height="match_parent">
    <Button id="@+id/top"
          layout_width="0"
          layout_height="100"
          layout_left_right="@id/left"
          layout_right_right="parent"
          layout_top_top="parent"
          text="top"/>
     <Button id="@+id/right"
          layout_width="100"
          layout_top_bottom="@id/top"
          layout_right_right="parent"
          layout_bottom_bottom="parent"
          text="right"/>
     <Button id="@+id/bottom"
          layout_height="100"
          layout_left_left="parent"
          layout_right_left="@id/right"
          layout_bottom_bottom="parent"
          text="bottom"/>
     <Button id="@+id/left"
          layout_width="100"
          layout_left_left="parent"
          layout_top_top="parent"
          layout_bottom_top="@id/bottom"
          text="left"/>
          
     <Button id="@+id/middle"
          layout_width="100"
          layout_height="100"
          layout_left_right="@id/left"
          layout_right_left="@id/right"
          layout_top_bottom="@id/top"
          layout_bottom_top="@id/bottom"
          text="middle"/>
          
    <LinearLayout id="@+id/east"
          layout_width="0"
          layout_height="wrap_content"
          layout_left_right="@id/left"
          layout_right_left="@id/middle"
          layout_top_top="@id/middle"
          layout_bottom_bottom="@id/middle"
          layout_orientation="horizontal">
          <Button layout_weight="1"
             layout_height="100"
             text="1"/>
          <Button layout_weight="1"
             layout_height="100"
             text="2"/>   
          <Button layout_weight="1"
             layout_height="100"
             text="3"/>
    </LinearLayout>
          
    <LinearLayout id="@+id/north"
          layout_width="wrap_content"
          layout_height="0"
          layout_left_left="@id/middle"
          layout_right_right="@id/middle"
          layout_top_bottom="@id/top"
          layout_bottom_top="@id/middle"
          layout_orientation="vertical">
          <Button layout_weight="1"
             layout_width="100"
             text="1"/>
          <Button layout_weight="1"
             layout_width="100"
             text="2"/>   
          <Button layout_weight="1"
             layout_width="100"
             text="3"/>
    </LinearLayout>

    <LinearLayout id="@+id/west"
          layout_width="0"
          layout_height="wrap_content"
          layout_left_right="@id/middle"
          layout_right_left="@id/right"
          layout_top_top="@id/middle"
          layout_bottom_bottom="@id/middle"
          layout_orientation="horizontal">
          <Button layout_weight="1"
             layout_height="100"
             text="1"/>
          <Button layout_weight="1"
             layout_height="100"
             text="2"/>   
          <Button layout_weight="1"
             layout_height="100"
             text="3"/>
    </LinearLayout>
    
    <LinearLayout id="@+id/south"
          layout_width="wrap_content"
          layout_height="0"
          layout_left_left="@id/middle"
          layout_right_right="@id/middle"
          layout_top_bottom="@id/middle"
          layout_bottom_top="@id/bottom"
          layout_orientation="vertical">
          <Button layout_weight="1"
             layout_width="100"
             text="1"/>
          <Button layout_weight="1"
             layout_width="100"
             text="2"/>   
          <Button layout_weight="1"
             layout_width="100"
             text="3"/>
    </LinearLayout>
    
    <Button
          layout_width="150"
          layout_height="50"
          layout_left_right="@id/left"
          layout_top_bottom="@id/top"
          layout_right_left="@id/north"
          layout_bottom_top="@id/east"
          text="left top"/>

    <Button
          layout_width="150"
          layout_height="50"
          layout_left_right="@id/north"
          layout_top_bottom="@id/top"
          layout_right_left="@id/right"
          layout_bottom_top="@id/west"
          text="right top"/>
    
    <Button
          layout_width="150"
          layout_height="50"
          layout_left_right="@id/south"
          layout_top_bottom="@id/west"
          layout_right_left="@id/right"
          layout_bottom_top="@id/bottom"
          text="right bottom"/>
    
    <Button
          layout_width="150"
          layout_height="50"
          layout_left_right="@id/left"
          layout_top_bottom="@id/east"
          layout_right_left="@id/south"
          layout_bottom_top="@id/bottom"
          text="left bottom"/>
          
</RelativeLayout>